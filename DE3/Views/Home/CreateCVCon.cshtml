
@{
    ViewBag.Title = "CreateCVCon";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = ViewBag.id;
}

<h2>Thêm mới công việc</h2>

<div class="w3agile-validation w3ls-validation">
    <div class="panel panel-widget agile-validation">
        <div class="validation-grids widget-shadow" data-example-id="basic-forms">
            <div class="form-body form-body-info">
                <form data-toggle="validator" novalidate="true" action="#" method="post">
                    <div class="input-info">
                        <h3>Thông tin công việc:</h3>
                    </div>
                    <div class="form-body form-body-info">
                        <div class="form-group">
                            <input type="text" class="form-control" id="TenCV" placeholder="Tên công việc" name="TenCV" required="">

                        </div>
                        <div class="form-group">
                            <input type="text" data-toggle="validator" class="form-control" name="MoTa" id="MoTa" placeholder="Mô tả" required="">
                        </div>
                        <div class="form-group">
                            <label for="ThgianBD" class="col-sm-2 control-label">Thời gian bắt đầu</label>
                            <input type="date" class="form-control" id="ThgianBD" name="ThgianBD" placeholder="Thời gian bắt đầu" required="">
                        </div>
                        <div class="form-group">
                            <label for="ThgianKT" class="col-sm-2 control-label">Thời gian kết thúc</label>
                            <input type="date" class="form-control" id="ThgianKT" name="ThgianKT" required="">
                        </div>
                        <div class="form-group">
                            <label for="selector1" class="col-sm-4 control-label">Người thực hiện</label>
                            <div class="col-sm-8">
                                <select name="NguoiTH" id="selector1" class="form-control1">
                                    <option value="ko">------------------------------</option>
                                    <option value="Huyền">Huyền</option>
                                    <option value="Vũ">Vũ</option>
                                    <option value="Kiệt">Kiệt</option>
                                </select>
                            </div>
                        </div>

                        @*<div class="form-group">
                            <input type="text" data-toggle="validator" class="form-control" id="NguoiTH" name="NguoiTH" placeholder="Người thực hiện" required="">
                        </div>*@
                        <div class="form-group">
                            <label for="selector1" class="col-sm-4 control-label">Người giao việc</label>
                            <div class="col-sm-8">
                                <select name="NguoiGiao" id="selector2" class="form-control1">
                                    <option value="ko">------------------------------</option>
                                    <option value="Huyền">Huyền</option>
                                    <option value="Vũ">Vũ</option>
                                    <option value="Kiệt">Kiệt</option>
                                </select>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <input type="text" data-toggle="validator" class="form-control" id="NguoiGiao" name="NguoiGiao" placeholder="Người giao việc" required="">
                        </div>*@
                        <div class="form-group">
                            <input type="hidden" data-toggle="validator" class="form-control" id="CvChaID" name="CvChaID" value="@id">
                        </div>
                    </div>
                    <br />
                    <div class="bottom">

                        <div class="form-group">
                            <button type="submit" onclick="return checkday()" class="btn btn-primary ">Thêm</button>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                </form>
            </div>

        </div>
    </div>



</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>


    function checkday() {

            var CCCD = $("#CCCD").val();
            var Phone = $("#Phone").val();
            console.log(CCCD.length)
            if (CCCD.length != 12) {
                var text = "CCCD phải có 12 ký tự";
                window.location.href = "https://localhost:44346/Home/Error?MaError=" + text
                return false;
            }
            if (Phone.length != 10) {
                var text = "Phone phải có 10 ký tự";
                window.location.href = "https://localhost:44346/Home/Error?MaError=" + text
                return false;
            }



        return true;
    }
</script>


